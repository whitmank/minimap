{
    "manifest_version": 3,
    "name": "kw-dev",
    "version": "1.0",
    "permissions": [
        "activeTab",
        "browsingData",
        "windows",
        "sidePanel"
    ],
    "action": {
        "default_title": "Click to open panel"
    },
    "commands": {
        "_execute_action": {
            "suggested_key": {
                "mac": "MacCtrl+Z",
                "linux": "Alt+Z",
                "windows": "Alt+Z"
            }
        }
    },
    "side_panel": {
        "default_path": "src/chrome/sidePanel.html"
    },
    "background": {
        "service_worker": "./src/chrome/service-worker.js"
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'"
    }
}
